<p style="color: green">
  <%= notice %>
</p>

<%= render @admin_product %>

  <div class="c-actions-flex">
    <%= link_to edit_admin_product_path(@admin_product), class:"btn btn-success" do %>
      <span>Edit</span>
      <i class="fa-solid fa-pen-to-square"></i>
      <% end %>

        <%= link_to [:admin, @admin_product], data:{turbo_method: :delete, turbo_confirm:"Are you sure?"}, class:"btn
