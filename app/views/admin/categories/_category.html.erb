<section class="crud">
  <div class="c-top">
    <h2>
      <%= category.name %>
    </h2>
    <button type="button">
      <%= link_to "Back" , admin_categories_path %>
    </button>
  </div>


  <div class="c-details">
    <div class="c-details-tn">
      <%= category.categoryImage.present? ? image_tag(category.categoryImage, class:"category-image") :
        image_tag("http://via.placeholder.com/300", class:"category-image") %>
    </div>

    <p>
      <%= category.description %>
    </p>

   

  </div>

</section>