<p style="color: green">
  <%= notice %>
</p>

<%= render @admin_category %>

  <div class="c-actions-flex">
    <%= link_to edit_admin_category_path(@admin_category), class:"btn btn-success" do %>
      <span>Edit</span>
      <i class="fa-solid fa-pen-to-square"></i>
      <% end %>

        <%= link_to [:admin, @admin_category], data:{turbo_method: :delete, turbo_confirm:"Are you sure?"}, class:"btn
          btn-danger" do %>
          <span>Delete</span>
          <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
  </div>



  <!-- start -->
  <div class="category-products mt-2">
    <h3><b><%= @admin_category.name %>' products</b></h3>
  <section class="crud">
    <% if @products.empty? %>
    <p class="text-center">No product is associated with "<%= @admin_category.name %>" yet.</p>
    <% else %>
  <%= render "shared/products", obj:@products %>
  <% end %>
  </section>
</div>
  
  
  
  
  
  